<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <ImageView
                android:id="@+id/card_hotel_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/card_hotel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/card_hotel_img"
                android:layout_marginStart="30dp"
                android:layout_alignParentTop="true"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/card_hotel_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/card_hotel_img"
                android:layout_below="@+id/card_hotel_name"
                android:layout_marginStart="30dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/card_hotel_calification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/card_hotel_img"
                android:layout_below="@id/card_hotel_address"
                android:layout_marginStart="30dp"
                android:textSize="15sp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/btn_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_return"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>
</LinearLayout>